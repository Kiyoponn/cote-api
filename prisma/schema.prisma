// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model characters {
  id                 Int                 @id @default(autoincrement())
  name               String
  nickname           String?
  image              String?             @db.VarChar(1024)
  characteristics    characteristics?
  professionalstatus professionalstatus?
}

model characteristics {
  id          Int        @id @default(autoincrement())
  characters  characters @relation(fields: [id], references: [id], onDelete: Cascade)
  gender      String?
  age         Int?
  dateOfBirth String?
  height      Int?
  hairColor   String?
  eyeColor    String?

  @@index([id])
}

model professionalstatus {
  id          Int        @id @default(autoincrement())
  characters  characters @relation(fields: [id], references: [id], onDelete: Cascade)
  schoolId    String?
  year        Int?
  grade       String?
  club        String?
  group       String?
  occupation  String?
  affiliation String?

  @@index([id])
}
